<div id="page">
	<div id="content">
		<div class="post">
			<h2 class="title"><%= link_to "Delicacies", posts_path %></h2>
			<div class="entry">
				<br/><br/>
				<% @posts.each do |post| %>
				<h3><%= link_to post.title, post%></h3>
				
				<p><%=h truncate(post.body, :length => 80) %></p>
				<p style = "font-size: 12px"><%= link_to "Edit", edit_post_path(post)  %> |
				<%= link_to "Delete", post, :confirm => "Are you sure?", :method => :delete %></p>
				<hr />

			<% end %>
			</div>
		</div>
	</div>
	<!-- end #content -->
	
</div>