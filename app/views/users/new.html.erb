<div id="page">
	<div id="content">
		<div class="post">
			<h2 class="title"><a href="#">Register</a></h2>
			<div class="entry">
				<%= form_for @user do |f| %>
				<% if @user.errors.any? %>
					<h2>Errors</h2>
					<ul>
						<% @user.errors.full_messages.each do |message| %>
							<li><%= message %> </li>
						<% end %>
					</ul>
				<% end %>
					
				<p>
					<%= f.label :email %><br />
					<%= f.email_field :email %>
				</p>
				<p>
					<%= f.label :name %><br />
					<%= f.text_field :name %>
				</p>
				<p>
					<%= f.label :contact_num %><br />
					<%= f.phone_field :contact_num %>
				</p>
				<p>
					<%= f.label :address %><br />
					<%= f.text_field :address %>
				</p>
				<p>
			    	<%= f.label :password %><br />
			    	<%= f.password_field :password %>
			  	</p>
			  	<p>
			    	<%= f.label :password_confirmation %><br />
			    	<%= f.password_field :password_confirmation %>
			  	</p>
				<p>
					<%= f.submit "Register"%>
				</p>

			<% end %>
			</div>
		</div>
	</div>
	<!-- end #content -->
	
</div>